{
  "manifest_version":2,
  "version": "1.0" ,
  "name": "BudgetManager",
  "description": "This extension tracks your overall spendings",
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },
  "browser_action": {
    "default_icon": "icon16.png",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "background": {
    "persistent": false, //This indicates that it is an event page
    //not a background page
    "scripts": [ "eventPage.js" ]
  },
  "permissions": [ "storage" ,"notifications","contextMenus"]
}